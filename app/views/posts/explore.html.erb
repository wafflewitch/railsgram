<h1 class="mt-5 mb-3">Explore Railsgram</h1>

<% if @posts.any? %>
  <% @posts.each_slice(3) do |slice| %>
    <div class="row mb-3">
      <% slice.each do |post| %>
        <%= render("post", post: post) %>
      <% end %>
    </div>
    <% end %>
<% else %>
  <div class="card">
    <div class="card-body p-5">
      <h5>Hmm... Looks like no one has posted anything!</h5>
    </div>
  </div>
<% end %>
