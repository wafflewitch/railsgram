<div class="my-1">
  <%= form_with(model: [post, comment], local: true, html: { data: { type: "html" }}) do |f| %>
    <%= f.text_area :body, class: "form-control", placeholder: "Say something nice!" %>
    <div class="mt-3 d-flex justify-content-end">
      <%= f.submit "Post comment", data: { disable_with: "Posting..." }, class: "btn btn-primary btn-sm rounded" %>
    </div>
  <% end %>
</div>
