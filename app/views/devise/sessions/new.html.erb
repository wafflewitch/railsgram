<div class="container mt-5">
  <div class="justify-content-center align-items-center">
    <div class="row">
      <div class="col-md-8 col-lg-8 mx-auto my-5">
        <div class="card shadow-sm">
          <div class="card-body p-5">
            <h2 class="my-3">Log In</h2>

            <hr />

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, placeholder: "you@email.com", autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, placeholder: "********", autocomplete: "current-password", class: "form-control" %>
                <small class="text-muted form-text">
                  Forgot your password? <%= link_to "Click here to reset it.", new_password_path(resource_name), class: "text-muted" %>
                </small>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.submit "Log In", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
